{
  "name": "war-pengiuns",
  "version": "1.0.0",
  "description": "War Pengiuns is a multiplayer game made with HTML5 and Node.js",
  "author": "Mart Linger",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "node --loader ts-node/esm server/server.ts",
    "dev:nodemon": "nodemon server/server.ts --exec ts-node-esm",
    "start": "node dist/server.js",
	"test": "jest"
  },
  "dependencies": {
	  "dotenv": "16.0.3",
	  "express": "4.18.2",
	  "socket.io": "4.6.1",
	  "ts-node": "10.9.1",
	  "winston": "3.8.2"
  },
  "devDependencies": {
	"@types/express": "4.17.17",
    "@types/jest": "29.5.1",
	"@types/node": "20.2.3",
    "jest": "29.5.0",
    "ts-jest": "29.1.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "type": "module"
}
