{
  "name": "war-pengiuns",
  "version": "1.0.0",
  "description": "War Pengiuns is a multiplayer game made with HTML5 and Node.js",
  "author": "Mart Linger",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "node --loader ts-node/esm server/server.mts",
    "dev:nodemon": "nodemon server/server.mts --exec ts-node-esm",
    "start": "node dist/server.mjs"
  },
  "dependencies": {
    "@types/express": "4.17.17",
    "@types/node": "20.2.3",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "socket.io": "4.6.1",
    "ts-node": "10.9.1",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18.16.0"
  }
}
